---
import { Image } from 'astro:assets'
const { data } = Astro.props
---

<a href={data.slug} class="w-fit mx-auto">
  <article
    class="cursor-pointer group hover:-translate-y-2 transition duration-150"
  >
    <h2
      class="text-text text-xl tablet:text-2xl mb-4 group-hover:text-accent_green"
    >
      {data.heading}
    </h2>
    <div class="relative h-64">
      <Image
        transition:name={data.tag}
        class="w-full h-full rounded-lg"
        src={data.projectImg}
        alt={data.heading}
      />
    </div>

    <p class="py-4 text-base tablet:text-lg max-w-[60ch] tablet:max-w-[45ch] text-grey">
      {data.desc}
    </p>
  </article>
</a>
